{% if is_preview %}
  <h4 class="preview-title">Image & Text block</h4>
{% endif %}

<section class="m-entity m-entity__image-text {% if fields.alignment %}m-entity__image-text-alt{% endif %}">

  <div class="m-entity__image-text__wrapper">
    <img 
      alt="{{ fields.image.alt }}" 
      {% if is_preview %}
        src="{{ Image(fields.image).src|resize(410, 214)  }}"
      {% else %}    
        data-src="{{ Image(fields.image).src|resize(410, 214)  }}" 
        class="lazy"
      {% endif %}
    />

    {% include "/atoms/image-credit.twig" with {
      credit: fields.image.caption
    } %}
  </div>

  <div class="m-entity__image-text-content">
    {% if fields.title %}
      <h3>{{ fields.title }}</h3>
    {% endif %}

    {{ fields.copy }}
  </div>
</section>

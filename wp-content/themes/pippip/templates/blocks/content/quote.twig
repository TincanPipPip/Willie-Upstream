{% if is_preview %}
  <h4 class="preview-title">Quote block</h4>
{% endif %}

<section class="m-entity m-entity__quote">
  <blockquote>
    {{ fields.quote }}
  </blockquote>

  {% if fields.cite %}
    <cite>
      <strong>{{ fields.cite }}</strong>

      {% if fields.organisation %}
        - {{ fields.organisation }}
      {% endif %}
    </cite>
  {% endif %}

</section>

{% if is_preview %}
  <h4 class="preview-title">Banner</h4>
{% endif %}

<section class="m-banner" aria-label="{{ fields.title }}">

  {% set imageXs = Image(fields.image).src|resize('400','700') %}
  {% set imageSm = Image(fields.image).src|resize('800','800') %}
  {% set imageMd = Image(fields.image).src|resize('1100','580') %}
  {% set imageBg = Image(fields.image).src|resize('1920','1000') %}

  <picture>
    <source media="(max-width: 400px)" data-srcset="{{ imageXs }}" type="image/jpeg">
    <source media="(max-width: 800px)" data-srcset="{{ imageSm }}" type="image/jpeg">
    <source media="(max-width: 1100px)" data-srcset="{{ imageMd }}" type="image/jpeg">
    
    <img 
      {% if is_preview %}
        src="{{ imageBg }}"
      {% else %}
        data-src="{{ imageBg }}"
        class="lazy"
      {% endif %}
      alt="{{ fields.image.alt }}"
    />
  </picture>

  <div class="m-banner__inner">
    <div class="grid">
      <div class="col-sm-8 col-md-7 col-lg-6">

        <h1>{{ fields.title }}</h1>

        {{ fields.strapline }}
        
      </div>
    </div>
  </div>

  {% include "/atoms/image-credit.twig" with {
    credit: fields.image.caption
  } %}

</section>
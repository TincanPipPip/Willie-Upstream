{% if items %}
	<ul>
	{% for item in items %}
		<li class="{{ item.classes | join(' ') }}">
			<a target="{{ item.target }}" href="{{ item.link }}" data-name="{{ item.title }}">{{ item.title }} {% if item.children %}<span></span>{% endif %}</a>
			{% include "/molecules/menu.twig" with {'items': item.children} %}
		</li>
	{% endfor %}
	</ul>
{% endif %}

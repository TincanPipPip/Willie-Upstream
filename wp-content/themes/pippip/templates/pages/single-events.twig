{% extends "/layout/base.twig" %}

{% block content %}
	<article class="post-type-{{post.post_type}}" id="post-{{post.ID}}" data-template="page.twig">

    {% include "/molecules/banner.twig" %}

    <section class="o-page {% if not post.thumbnail.src %}o-page--noimg{% endif %}">
      
      <h1 class="h2">{{ post.title }}</h1>

      {{ post.content }}      
    
      <aside class="o-page__col o-page__right">
        {{ subnav }}
      </aside>
    </section>

    {% include "/molecules/related.twig" %}
    
	</article>
{% endblock %}

{% extends "/layout/base.twig" %}

{% block content %}
	<article class="post-type-{{post.post_type}} " id="post-{{post.ID}}" data-template="page-landing.twig">

    {% include "/molecules/banner.twig" %}

    <section class="o-page o-page--landing {% if not post.thumbnail.src %}o-page--noimg{% endif %}">
      <h1 class="h2">{{ post.title }}</h1>
    
      <aside class="o-page__col o-page__right"></aside>
    </section>
    
    <section class="o-landing">
      {{ post.content }}
    </section>

	</article>
{% endblock %}
